<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <Button
        android:id="@+id/btn7"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginBottom="20dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        tools:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@+id/btnAnd"
        tools:text="9" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="32dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnd"
        app:layout_constraintVertical_bias="0.326"
        tools:text="/" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginBottom="16dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        app:layout_constraintEnd_toStartOf="@+id/btnDivide"
        tools:text="6" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        tools:text="5" />

    <Button
        android:id="@+id/btnAnd"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="36dp"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="*" />

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="36dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnd"
        app:layout_constraintVertical_bias="0.795"
        tools:text="-" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        tools:text="2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/btnCE"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        tools:text="1" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="28dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSubtract"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        app:layout_constraintVertical_bias="0.111"
        tools:text="=" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="156dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="80dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCE"
        tools:text="0" />

    <Button
        android:id="@+id/btnCE"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="80dp"
        android:text="CE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="CE"

        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginBottom="20dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/btnSubtract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        tools:text="+"

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/Screen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.175"
        app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>